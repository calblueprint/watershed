<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/standard_margin"
    android:paddingRight="@dimen/standard_margin"
    android:paddingTop="@dimen/tight_margin"
    android:paddingBottom="@dimen/tight_margin"
    tools:context="com.blueprint.watershed.LandingPageActivity"
    android:background="@color/ws_blue"
    android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/logo_image_view"
        android:background="@drawable/watershed_logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        />

    <Button
        android:id="@+id/login_button"
        android:onClick="didTapSignInButton"
        android:layout_width="200dp"
        android:layout_height="@dimen/button_standard_height"
        android:background="@color/white"
        android:textSize="14sp"
        android:text="Log In"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/email_field"
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:hint="@string/email_hint"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/password_field"
        android:inputType="textPassword"
        android:hint="@string/password_hint"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />

</LinearLayout>

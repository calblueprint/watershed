<RelativeLayout
    android:id="@+id/mini_site_create_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blueprint.watershed.MiniSites.CreateMiniSiteFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/mini_site_photo_container"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <com.blueprint.watershed.Views.CoverPhotoPagerView
                    android:id="@+id/mini_site_photo_pager_view"
                    android:background="@color/ws_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/transparent_black"
                    android:padding="10dp">
                    <ImageButton
                        android:id="@+id/mini_site_delete_photo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_delete"
                        />
                    <ImageButton
                        android:id="@+id/mini_site_add_photo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_toRightOf="@id/mini_site_delete_photo"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ic_camera"
                    />
                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/mini_site_title_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mini_site_photo_container"
                android:layout_margin="20dp"
                >
                <EditText
                    android:id="@+id/create_mini_site_title"
                    android:hint="@string/title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/form_gray"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/layer_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/mini_site_title_container"
                android:background="@color/form_gray"/>

            <RelativeLayout
                android:id="@+id/mini_site_description_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layer_1"
                android:layout_margin="20dp"
                >

                <ImageView
                    android:id="@+id/description_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_description"
                    android:scaleType="centerCrop"
                    />

                <EditText
                    android:id="@+id/create_mini_site_description"
                    android:hint="@string/description"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@id/description_image"
                    android:layout_toRightOf="@id/description_image"
                    android:textColor="@color/black"
                    android:textColorHint="@color/form_gray"
                    android:textSize="15sp"
                    android:background="@color/transparent"
                    android:gravity="top"
                    android:lines="5"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/layer_2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/mini_site_description_container"
                android:background="@color/form_gray"/>

            <RelativeLayout
                android:id="@+id/mini_site_address_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layer_2"
                android:layout_margin="20dp"
                >

                <ImageView
                    android:id="@+id/location_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_location"
                    android:scaleType="centerCrop"
                    />

                <EditText
                    android:id="@+id/create_mini_site_address"
                    android:hint="@string/create_site_address"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_toRightOf="@id/location_image"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/form_gray"
                    android:background="@color/transparent"
                    android:textSize="15sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_standard_height"
                    android:layout_below="@id/create_mini_site_address"
                    android:layout_toRightOf="@id/location_image"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp">
                    <EditText
                        android:id="@+id/create_mini_site_city"
                        android:hint="@string/create_site_city"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_weight="0.9"
                        android:background="@color/transparent"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textColorHint="@color/form_gray"
                        android:textSize="15sp"
                        />
                    <EditText
                        android:id="@+id/create_mini_site_state"
                        android:hint="@string/create_site_state"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textColorHint="@color/form_gray"
                        android:textSize="15sp"
                        />
                    <EditText
                        android:id="@+id/create_mini_site_zip"
                        android:hint="@string/create_site_zip"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_width="fill_parent"
                        android:layout_weight="1.1"
                        android:background="@color/transparent"
                        android:maxLines="1"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textColorHint="@color/form_gray"
                        android:textSize="15sp"
                        />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

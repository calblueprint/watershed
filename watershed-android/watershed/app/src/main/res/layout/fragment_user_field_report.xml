<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blueprint.watershed.Users.UserFieldReportFragment">

    <com.blueprint.watershed.Views.HeaderGridView
        android:id="@+id/field_reports_grid"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/no_margin"
        android:layout_marginLeft="@dimen/no_margin"
        android:layout_marginRight="@dimen/no_margin"
        android:background="@color/medium_gray"
        android:numColumns="1"
        android:verticalSpacing="@dimen/tight_margin"
        android:horizontalSpacing="@dimen/tight_margin">
    </com.blueprint.watershed.Views.HeaderGridView>

    <TextView
        android:id="@+id/no_reports_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/no_user_reports"/>

</FrameLayout>

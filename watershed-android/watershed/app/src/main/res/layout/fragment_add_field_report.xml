<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/report_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/report_photo_container"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/text_color">

                <ImageView
                    android:id="@+id/report_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/transparent_black"
                    android:padding="10dp">
                    <ImageButton
                        android:id="@+id/report_add_photo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_camera"
                        />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/field_report_rating_container"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/ws_blue"
                android:layout_below="@id/report_photo_container"
                android:gravity="center">
                <RatingBar
                    android:id="@+id/field_report_health_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:isIndicator="false"
                    />
                <View
                    android:id="@+id/field_report_rating_divider"
                    android:layout_width="3dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/field_report_health_rating"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/field_report_rating_divider"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/report_title_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/field_report_rating_container"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                >
                <EditText
                    style="@style/TaskTextView"
                    android:id="@+id/report_title"
                    android:text="@string/title"
                    android:layout_marginLeft="0dp"
                    android:padding="0dp"
                    android:background="@color/transparent"
                    android:inputType="textMultiLine"
                    android:textSize="30sp"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/layer_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/report_title_container"
                android:background="@color/text_color"/>

            <RelativeLayout
                android:id="@+id/report_description_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:layout_below="@id/report_title_container">

                <ImageView
                    style="@style/Icon"
                    android:id="@+id/report_description_icon"
                    android:src="@drawable/description_gray"
                    />

                <EditText
                    style="@style/TaskTextView"
                    android:id="@+id/report_description"
                    android:layout_toRightOf="@id/report_description_icon"
                    android:hint="@string/description"
                    android:minLines="1"
                    android:maxLines="5"
                    android:inputType="textMultiLine"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/report_urgent_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingRight="30dp"
                android:paddingLeft="30dp"
                android:layout_below="@id/report_description_container">

                <ImageView
                    style="@style/Icon"
                    android:id="@+id/create_task_urgent_icon"
                    android:src="@drawable/urgent_gray"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/create_task_urgent_icon"
                    android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"
                    android:text="@string/urgent"
                    android:textColor="@color/form_gray"
                    android:textSize="18sp"/>

                <Switch
                    android:id="@+id/field_report_urgent"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:textOn="@string/yes"
                    android:textOff="@string/no"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

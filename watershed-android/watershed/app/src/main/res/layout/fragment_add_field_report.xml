<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blueprint.watershed.FieldReports.AddFieldReportFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/mini_site_photo_container"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/ws_blue">

                <ImageView
                    android:id="@+id/mini_site_photo_pager_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/transparent_black"
                    android:padding="10dp">
                    <ImageButton
                        android:id="@+id/report_take_photo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_delete"
                        />
                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/mini_site_title_container"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_standard_height"
                android:layout_below="@id/mini_site_photo_container"
                android:layout_margin="20dp"
                >
                <EditText
                    android:id="@+id/create_mini_site_title"
                    android:hint="@string/title"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/button_standard_height"
                    android:background="@color/transparent"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/form_gray"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/layer_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/mini_site_title_container"
                android:background="@color/form_gray"/>

            <RelativeLayout
                android:id="@+id/mini_site_description_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layer_1"
                android:layout_margin="20dp"
                >

                <ImageView
                    android:id="@+id/description_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_description"
                    android:scaleType="centerCrop"
                    />

                <EditText
                    android:id="@+id/create_mini_site_description"
                    android:hint="@string/description"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@id/description_image"
                    android:layout_toRightOf="@id/description_image"
                    android:textColor="@color/black"
                    android:textColorHint="@color/form_gray"
                    android:background="@color/transparent"
                    android:gravity="top"
                    android:lines="6"
                    />
            </RelativeLayout>

            <View
                android:id="@+id/layer_2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/mini_site_description_container"
                android:background="@color/form_gray"/>

            <RelativeLayout
                android:id="@+id/mini_site_address_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layer_2"
                android:layout_margin="20dp"
                >

                <ImageView
                    android:id="@+id/location_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_location"
                    android:scaleType="centerCrop"
                    />

                <EditText
                    android:id="@+id/create_mini_site_address"
                    android:hint="@string/create_site_address"
                    android:layout_height="@dimen/button_standard_height"
                    android:layout_width="fill_parent"
                    android:layout_toRightOf="@id/location_image"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/form_gray"
                    android:background="@color/transparent"
                    />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/health_group"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@id/location_image"
                    android:layout_toRightOf="@id/location_image"
                    android:orientation="horizontal">
                    <RadioButton android:id="@+id/health_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:layout_marginLeft="12dp"
                        />
                    <RadioButton android:id="@+id/health_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="2"
                        />
                    <RadioButton android:id="@+id/health_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="3"
                        />
                    <RadioButton android:id="@+id/health_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="4"
                        />
                    <RadioButton android:id="@+id/health_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="5"
                        />
                </RadioGroup>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>

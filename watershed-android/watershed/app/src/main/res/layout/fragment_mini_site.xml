<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.blueprint.watershed.MiniSites.MiniSiteFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.blueprint.watershed.Views.CoverPhotoView
                android:id="@+id/site_photo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginRight="@dimen/standard_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/site_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tight_margin"
                    android:textSize="30sp"
                    android:text="Mini Site Name"
                    />

                <TextView
                    android:id="@+id/site_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tight_margin"
                    android:textSize="14sp"
                    android:text="Mini Site Description"
                    />

                <TextView
                    android:id="@+id/site_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tight_margin"
                    android:textSize="14sp"
                    android:text="Mini Site Location"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</FrameLayout>

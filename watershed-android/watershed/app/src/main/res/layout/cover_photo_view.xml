<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cover_photo"
        android:src="@drawable/default_cover_photo"
        android:layout_width="72dip"
        android:layout_height="72dip"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/primary_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primary Label"
        android:layout_toRightOf="@+id/cover_photo"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
        android:layout_marginLeft="?android:attr/listPreferredItemPaddingLeft"/>

    <TextView
        android:id="@+id/secondary_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secondary Label"
        android:layout_toRightOf="@+id/cover_photo"
        android:layout_below="@+id/primary_label"
        android:layout_marginLeft="?android:attr/listPreferredItemPaddingLeft"
        android:textAppearance="@android:style/TextAppearance.Holo.Small"/>

</RelativeLayout>
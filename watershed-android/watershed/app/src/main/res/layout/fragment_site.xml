<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.blueprint.watershed.Sites.SiteFragment">

    <com.blueprint.watershed.Views.HeaderGridView
        android:id="@+id/mini_sites_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/no_margin"
        android:layout_marginLeft="@dimen/no_margin"
        android:layout_marginRight="@dimen/no_margin"
        android:background="@color/medium_gray"
        android:numColumns="2"
        android:verticalSpacing="@dimen/tight_margin"
        android:horizontalSpacing="@dimen/tight_margin">
    </com.blueprint.watershed.Views.HeaderGridView>

    <com.blueprint.watershed.Views.Material.FloatingActionsMenu
        android:id="@+id/site_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        fab:fab_menu_colorNormal="@color/pink"
        fab:fab_menu_colorPressed="@color/pink_pressed"
        fab:fab_menu_icon="@drawable/ic_settings"
        fab:fab_labelStyle="@style/menu_labels_style"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">

        <com.blueprint.watershed.Views.Material.FloatingActionButton
            android:id="@+id/site_subscribe_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="@string/subscribe_site"
            fab:fab_menu_colorNormal="@color/pink"
            fab:fab_menu_colorPressed="@color/pink_pressed"
            fab:fab_icon="@drawable/ic_bookmark_outline_white_36dp"/>

        <com.blueprint.watershed.Views.Material.FloatingActionButton
            android:id="@+id/site_edit_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="@string/edit_site"
            fab:fab_menu_colorNormal="@color/pink"
            fab:fab_menu_colorPressed="@color/pink_pressed"
            fab:fab_icon="@drawable/ic_edit"/>

        <com.blueprint.watershed.Views.Material.FloatingActionButton
            android:id="@+id/site_add_minisite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_title="@string/add_minisite"
            fab:fab_menu_colorNormal="@color/pink"
            fab:fab_menu_colorPressed="@color/pink_pressed"
            fab:fab_icon="@drawable/ic_add"/>

    </com.blueprint.watershed.Views.Material.FloatingActionsMenu>
</RelativeLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.blueprint.watershed.Tasks.TaskDetailFragment">
    <RelativeLayout
        android:id="@+id/task_title_container"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/ws_blue"
        android:padding="20dp">

        <TextView
            android:id="@+id/task_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Title"
            android:textSize="30sp"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <com.blueprint.watershed.Views.Material.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_task_button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="45dp"
        fab:fab_plusIconColor="@color/white"
        fab:fab_colorNormal="@color/pink"
        fab:fab_colorPressed="@color/pink_pressed"
        fab:fab_size="mini"
        fab:fab_icon="@drawable/ic_edit"
        />

    <RelativeLayout
        android:id="@+id/task_due_date_container"
        android:layout_below="@id/task_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        >
        <ImageView
            android:id="@+id/task_due_date_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_schedule"/>

        <TextView
            android:id="@+id/task_due_date"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/task_due_date_image"
            android:layout_marginLeft="20dp"
            android:text="Date"
            android:textSize="16sp"
        />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/task_description_container"
        android:layout_below="@id/task_due_date_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        >
        <ImageView
            android:id="@+id/task_description_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_description"/>

        <TextView
            android:id="@+id/task_description"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/task_description_image"
            android:layout_marginLeft="20dp"
            android:text="Date"
            android:textSize="16sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/task_assigner_container"
        android:layout_below="@id/task_description_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        >
        <ImageView
            android:id="@+id/task_assigner_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_face"/>

        <TextView
            android:id="@+id/task_assigner"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/task_assigner_image"
            android:layout_marginLeft="20dp"
            android:text="Date"
            android:textSize="16sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/task_location_container"
        android:layout_below="@id/task_assigner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        >
        <ImageView
            android:id="@+id/task_location_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_location"/>

        <TextView
            android:id="@+id/task_location"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/task_location_image"
            android:layout_marginLeft="20dp"
            android:text="Date"
            android:textSize="16sp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <Button
            android:id="@+id/field_report_button"
            android:gravity="center"
            android:text="FIELD REPORT"
            android:background="@color/ws_blue"
            android:textColor="@color/white"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="75dp"
        />
        <Button
            android:id="@+id/complete_button"
            android:text="COMPLETE"
            android:background="@color/facebook_blue"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="75dp" />
    </LinearLayout>

</RelativeLayout>
